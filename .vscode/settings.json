{
	"files.autoSave": "onFocusChange",
	"files.insertFinalNewline": true,
	"editor.formatOnSave": true,
	"editor.wordWrap": "on",
	"cSpell.words": [
		"ALLAUTH",
		"amqp",
		"ASGI",
		"authtoken",
		"autodocstring",
		"autoupdate",
		"azuretools",
		"batisteo",
		"davidanson",
		"dbaeumer",
		"debugpy",
		"devcontainer",
		"devcontainers",
		"dotenv",
		"eamodio",
		"esbenp",
		"isbang",
		"isort",
		"kevinrose",
		"liveserver",
		"locmem",
		"mailhog",
		"matangover",
		"mkdocs",
		"mushan",
		"mypy",
		"njpwerner",
		"njqdev",
		"pydocstyle",
		"pylance",
		"pylint",
		"pyproject",
		"pytest",
		"pytestmark",
		"rabbitmq",
		"rcfile",
		"Redoc",
		"ritwickdey",
		"runserver",
		"shamanu",
		"socialaccount",
		"spywhere",
		"tamasfe",
		"todos",
		"tushortz",
		"typehint",
		"venv",
		"VHOST",
		"viewset",
		"viewsets",
		"virtualenvs",
		"visualstudioexptteam",
		"vscodeintellicode",
		"yapf",
		"yzhang"
	],
	"python.linting.maxNumberOfProblems": 300,
	"python.envFile": "${workspaceFolder}/backend/.env",
	"python.formatting.provider": "yapf",
	"python.linting.enabled": true,
	"python.linting.lintOnSave": true,
	"python.formatting.yapfArgs": [
		"--style",
		"${workspaceFolder}/backend/.style.yapf"
	],
	"python.analysis.autoImportCompletions": true,
	"python.analysis.packageIndexDepths": [
		{
			"name": "django",
			"depth": 10,
			"includeAllSymbols": true
		},
		{
			"name": "rest_framework",
			"depth": 10,
			"includeAllSymbols": true
		}
	],
	"editor.codeActionsOnSave": {
		"source.organizeImports": true
	},
	"isort.importStrategy": "fromEnvironment",
	"python.linting.banditEnabled": true,
	"python.linting.banditArgs": [
		"-c",
		"${workspaceFolder}/backend/pyproject.toml"
	],
	"python.linting.pylintEnabled": true,
	"python.linting.pylintArgs": [
		"--rcfile",
		"${workspaceFolder}/backend/pyproject.toml"
	],
	"python.linting.flake8Enabled": true,
	"python.linting.flake8Args": [
		"--config",
		"${workspaceFolder}/backend/.flake8"
	],
	"isort.args": [
		"--settings-path",
		"${workspaceFolder}/backend/pyproject.toml"
	],
	"python.linting.pydocstyleEnabled": true
}
